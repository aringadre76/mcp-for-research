{
  "name": "localook-autonomous-ai",
  "displayName": "LocalLook Autonomous AI",
  "description": "Enables Cursor AI to autonomously develop frontend applications",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:localook.getContext",
    "onCommand:localook.startAutonomous",
    "onCommand:localook.testCurrent"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "localook.getContext",
        "title": "üëÅÔ∏è Get Frontend Context",
        "category": "LocalLook"
      },
      {
        "command": "localook.startAutonomous",
        "title": "ü§ñ Start Autonomous Development",
        "category": "LocalLook"
      },
      {
        "command": "localook.testCurrent",
        "title": "üß™ Test Current Frontend",
        "category": "LocalLook"
      },
      {
        "command": "localook.quickAnalyze",
        "title": "‚ö° Quick Analysis",
        "category": "LocalLook"
      }
    ],
    "configuration": {
      "title": "LocalLook",
      "properties": {
        "localook.contextBridgeUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8080",
          "description": "LocalLook Context Bridge API URL"
        },
        "localook.frontendUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Your local frontend URL"
        },
        "localook.autoAnalyze": {
          "type": "boolean",
          "default": false,
          "description": "Automatically analyze frontend on file saves"
        },
        "localook.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "vsce": "^2.15.0"
  }
}
